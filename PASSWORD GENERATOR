import string

def generate_password(length, use_uppercase=True, use_digits=True, use_special_chars=True):
    # Define the possible characters to use in the password
    lowercase = string.ascii_lowercase
    uppercase = string.ascii_uppercase if use_uppercase else ''
    digits = string.digits if use_digits else ''
    special_chars = string.punctuation if use_special_chars else ''
    
    # Combine all chosen character sets
    all_chars = lowercase + uppercase + digits + special_chars
    
    if not all_chars:
        raise ValueError("At least one character set must be selected")
    
    # Generate a random password
    password = ''.join(random.choice(all_chars) for _ in range(length))
    
    return password

def main():
    # User input for password length and complexity options
    try:
        length = int(input("Enter the desired length of the password: "))
        use_uppercase = input("Include uppercase letters? (y/n): ") == 'y'
        use_digits = input("Include digits? (y/n): ") == 'y'
        use_special_chars = input("Include special characters? (y/n): ") == 'y'
        
        # Generate and display the password
        password = generate_password(length, use_uppercase, use_digits, use_special_chars)
        print(f"Generated password: {password}")
    
    
    except ValueError as e:
        print(f"Error: {e}")

if __name__ == "__main__":
    main()
